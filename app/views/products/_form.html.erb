<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :color %><br>
    <%= f.select :color, Product.colors.map{|r| [r.humanize, r.camelcase]}, {}%>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.check_box :status, options = {}, checked_value = "enabled", unchecked_value = "disabled" %> Enabled / Disabled
  </div>
  <div class="field">
    <%= f.label :inward_date %><br>
    <%= f.datetime_select :inward_date %>
  </div>
  <div class="field">
    <%= f.label :type %><br>
    <%= f.select :type, Product.types.map {|r| [r.humanize, r.camelcase]}, {}, disabled: @type != "Product" %> 
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
