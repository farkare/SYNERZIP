<p id="notice"><%= notice %></p>

<h1>Listing <%= @type.pluralize %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Color</th>
      <th>Status</th>
      <th>Inward date</th>
      <th>Type</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.color %></td>
        <td><%= product.status %></td>
        <td><%= product.inward_date %></td>
        <td><%= product.type %></td>
        <td><%= product.description %></td>
        <td><%= link_to 'Show', sti_product_path(product.type, product) %></td>
        <td><%= link_to "See all #{product.type.pluralize}", sti_product_path(product.type) %></td>
        <td><%= link_to 'Edit', sti_product_path(product.type, product, :edit) %></td>
        <td><%= link_to 'Destroy', sti_product_path(product.type, product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>
<div>
Total Price all <%= @type.pluralize %> : <%= Product.price_sum(product_type: @type) %>
</div><br/>
<%= link_to 'See all products', sti_product_path %>
<%= link_to "New #{@type}", sti_product_path(@type, nil, :new) %>